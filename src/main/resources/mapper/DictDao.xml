<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.stonedt.spider.dao.DictDao">
	
	<select id="listHotWords" resultType="map">
		SELECT * FROM hot_words ORDER BY create_time DESC
	</select>
	
	<select id="listStopWords" resultType="map">
		SELECT * FROM stop_words ORDER BY create_time DESC
	</select>
	
	<insert id="saveHotWords">
		INSERT INTO hot_words (word)VALUES(#{word})
	</insert>
	
	<insert id="saveStopWords">
		INSERT INTO stop_words (word)VALUES(#{word})
	</insert>
	
	<delete id="delHotWords">
		DELETE FROM hot_words WHERE word = #{word}
	</delete>
	
	<delete id="delStopWords">
		DELETE FROM stop_words WHERE word = #{word}
	</delete>
	
</mapper>